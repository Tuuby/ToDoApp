<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:descendantFocusability="blocksDescendants">

    <TextView
            android:layout_width="289dp"
            android:layout_height="50dp"
            android:id="@+id/todo_name" android:layout_marginStart="5dp"/>
    <ImageView
            android:src="@android:drawable/btn_star_big_off"
            android:layout_height="wrap_content" android:id="@+id/todo_favourite" android:layout_weight="1"
            android:layout_marginTop="15dp" android:layout_width="0dp"/>
    <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/todo_done" android:layout_marginTop="15dp"/>
</LinearLayout>