<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Activities.TodoActivity" android:orientation="vertical">
    <Switch
            android:text="Favourite to priority "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/prioritySwitch"
            android:layout_marginStart="130dp"/>
    <ListView
            android:layout_width="match_parent"
            android:layout_height="match_parent" android:id="@+id/todoList" android:layout_marginTop="30dp">
    </ListView>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/addButton"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|end"
            android:layout_margin="16dp"
            app:srcCompat="@drawable/ic_add_black_24dp" app:tint="@null"
            app:backgroundTint="?attr/colorPrimaryDark"/>
</FrameLayout>