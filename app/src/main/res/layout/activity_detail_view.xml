<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Activities.DetailViewActivity">

    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:layout_alignParentStart="true"
            android:layout_marginStart="20dp" android:layout_alignParentTop="true" android:layout_marginTop="40dp"
            android:id="@+id/todo_name" android:text="Name"/>
    <EditText
            android:text="Description"
            android:layout_width="370dp"
            android:layout_height="150dp"
            android:id="@+id/todo_description"
            android:layout_centerHorizontal="true" android:layout_alignParentTop="true"
            android:layout_marginTop="85dp"/>
    <Switch
            android:text="Favourite "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/isFavourite" android:layout_alignParentTop="true" android:layout_marginTop="247dp"
            android:layout_alignStart="@+id/todo_name"/>
    <CheckBox
            android:text="Done"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/isDone"
            android:layout_alignParentBottom="true" android:layout_marginBottom="287dp"
            android:layout_alignStart="@+id/todo_name"/>
    <Button
            android:text="Pick Date and Time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/dateTimeButton"
            android:layout_alignStart="@+id/todo_name" android:layout_alignParentTop="true"
            android:layout_marginTop="285dp"/>
    <Button
            android:text="Confirm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true" android:id="@+id/confirmButton" android:layout_marginEnd="12dp"
            android:layout_marginBottom="18dp"/>
    <Button
            android:text="Delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/deleteButton"
            android:layout_alignTop="@+id/confirmButton" android:layout_centerHorizontal="true"/>
</RelativeLayout>